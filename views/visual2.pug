  body
    .header_homepage Your new playlist is ready!
    .header_visual2 THIS IS VISUAL 2!!!
    span(style="") Dont forget to fill out
    span(style="color:#FF0000; text-decoration: underline;")  this questionnaire
    span(style="")  when you're ready!
    p
    p recommended tracks: #{rec_tracks}
    p globalVector1: #{vector1}
    p globalVector2: #{JSON.stringify(vector2)}
    - var nameRed = "Tom"
    - var nameGreen = "Alice"
    - var redPercentage = 80;
    - var greenPercentage = 70;
    - var playlist_names_red = ['country', 'skrrrt', 'party big'];
    - var playlist_names_green = ['summerplaylist', 'feel good music'];
    - var selected_playlists_red = ['dsfasfsd','sdafdsfaa','ddfadsfsa'];
    - var selected_playlists_green = ['qrewqer','rqerqrew','rqrewqq']
    p playlist names red: #{playlist_names_red}
    p playlist names green: #{playlist_names_green}
    p selected playlists red: #{selected_playlists_red}
    p selected playlists green: #{selected_playlists_green}

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')

    each t of rec_tracks
      #accordionExample.accordion
        .accordion-item
          h2#headingOne.accordion-header
            button.accordion-button(type='button' data-bs-toggle='collapse' data-bs-target='#collapseOne' aria-expanded='true' aria-controls='collapseOne')
              .titel(style="text-align:center") #{t.name} - #{t.artists[0].name}

          #collapseOne.accordion-collapse.collapse.show(aria-labelledby='headingOne' data-bs-parent='#accordionExample')
            .accordion-body
              a(href=t.preview_url) Preview
              .example-layout
                .row
                  .col-1
                    img(src='/images/red_avatar.png' alt='flyer_img' style='display: block; margin-left:17vw; margin-right: auto; width:30%;')
                    p(style="margin-left:19vw") #{nameRed}
                  .col-1
                    #myProgressRed
                      #myBarRed(style="float:right;border-radius: 15px 0 0 15px;width:"+redPercentage+";direction:rtl;height: 30px;background-color: #E93D3D") 80%
                  .col-1
                    #myProgressGreen
                      #myBarGreen(style="float:left;border-radius: 0 15px 15px 0;width:"+greenPercentage+";height: 30px;background-color: #5BE8A2;direction:rtl") 70%
                  .col-1
                    img(src='/images/green_avatar.png' alt='flyer_img' style='display: block; margin-left:auto; margin-right: 17vw; width:30%;')
                    .centerr
                    p(style="text-align:center;margin-right:15vw;") #{nameGreen}

                .row
                p
                  .naarboven(style="text-align:center") overall interest

                .row
                  p
                  .col-half
                    each playlist_name_red in playlist_names_red
                      .row
                        .col-2
                        .col-2
                          #myProgressRed
                            #myBarRed(style="float:right;border-radius: 15px 0 0 15px;width:"+redPercentage+";direction:rtl;height: 30px;background-color: #E93D3D") 80%
                        p
                        .redplaylistname #{playlist_name_red}
                        p

                  .col-half
                    each playlist_name_green in playlist_names_green
                      .row
                        .col-2
                          #myProgressGreen
                            #myBarGreen(style="float:left;border-radius: 0 15px 15px 0;width:"+greenPercentage+";height: 30px;background-color: #5BE8A2;direction:rtl") 70%
                        .col-2
                        p
                      .greenplaylistname #{playlist_name_green}
                      p


