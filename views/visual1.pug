    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')

    each t of rec_tracks
      #accordionExample.accordion
        .accordion-item
          h2#headingOnee.accordion-header
            button.accordion-button(type='button' data-bs-toggle='collapse' data-bs-target='#collapseOnee' aria-expanded='false' aria-controls='collapseOnee')
              | #{t.name} - #{t.artists[0].name}

          // add .show after .collapse to open by default
          #collapseOnee.accordion-collapse.collapse(aria-labelledby='headingOnee' data-bs-parent='#accordionExample')
            .accordion-body
              a(href=t.preview_url) Preview
              .example-layout
                .row
                  .col-1
                    img(src='/images/red_avatar.png' alt='flyer_img' style='display: block; margin-left:auto; margin-right: auto; width:30%;')
                    p(style="text-align:center") #{nameRed}
                  .col-1
                    #myProgressRed
                      #myBarRed(style="border-radius: 15px 0 0 15px;width:"+redPercentage+";direction:rtl;height: 30px;background-color: #E93D3D") 80%
                    br
                    button(onclick='move()') Click Me
                    script.
                      var i = 0;
                      function move() {
                      if (i == 0) {
                      i = 1;
                      var elem = document.getElementById("myBarRed");
                      var width = 1;
                      var id = setInterval(frame, 10);
                      function frame() {
                      if (width >= 100) {
                      clearInterval(id);
                      i = 0;
                      } else {
                      width++;
                      elem.style.width = width + "%";
                      }
                      }
                      }
                      }
                  .col-1
                    #myProgressGreen
                      #myBarGreen(style="border-radius: 0 15px 15px 0; width:"+greenPercentage+";height: 30px;background-color: #5BE8A2;direction:rtl") 70%
                    br 
                    button(onclick='move()') Click Me
                    script.
                      var i = 0;
                      function move() {
                      if (i == 0) {
                      i = 1;
                      var elem = document.getElementById("myBarGreen");
                      var width = 1;
                      var id = setInterval(frame, 10);
                      function frame() {
                      if (width >= 100) {
                      clearInterval(id);
                      i = 0;
                      } else {
                      width++;
                      elem.style.width = width + "%";
                      }
                      }
                      }
                      }
                  .col-1
                    img(src='/images/green_avatar.png' alt='flyer_img' style='display: block; margin-left:auto; margin-right: auto; width:30%;')
                    .centerr
                    p(style="text-align:center") #{nameGreen}
