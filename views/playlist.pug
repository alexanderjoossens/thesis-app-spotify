extends layout.pug
    
block content
    h1 Playlist #{name}

    table 
      each t in tracks
        tr 
          - var artist_name = t.track.artists[0].name
          - var track_name = t.track.name
          - var track_preview = t.track.preview_url

          td #{artist_name}
          td #{track_name}
          td: a(href=track_preview) Preview